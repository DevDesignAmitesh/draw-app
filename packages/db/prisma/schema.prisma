generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String   @id @default(uuid())
  email      String   @unique
  name       String
  password   String
  isVerified Boolean  @default(false)
  chats      Chat[]
  rooms      Room[]
  shapes     Shapes[]
}

model Chat {
  id      String @id @default(uuid())
  message String
  userId  String
  roomId  String
  user    User   @relation(fields: [userId], references: [id])
  room    Room   @relation(fields: [roomId], references: [id])
}

model Shapes {
  id      String @id @default(uuid())
  message String
  userId  String
  roomId  String
  user    User   @relation(fields: [userId], references: [id])
  room    Room   @relation(fields: [roomId], references: [id])
}

model Room {
  id      String @id @default(uuid())
  name    String
  slug    String @unique
  adminId String @unique
  user    User   @relation(fields: [adminId], references: [id])

  chats  Chat[]
  shapes Shapes[]
}
