{
  "name": "draw-app",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "generate": "cd packages/db && npx prisma generate",
    "migrate": "cd packages/db && npx prisma migrate dev -n 'init'",
    "build:http-backend": "cd apps/http-backend && pnpm build",
    "start:http-backend": "cd apps/http-backend && pnpm start",
    "build:ws-backend": "cd apps/ws-backend && pnpm build",
    "start:ws-backend": "cd apps/ws-backend && pnpm start",
    "build:app": "cd apps/app && pnpm build",
    "start:app": "cd apps/app && pnpm start",
    "build:worker": "cd apps/worker && pnpm build",
    "start:worker": "cd apps/worker && pnpm start"
  },
  "devDependencies": {
    "prettier": "^3.5.3",
    "turbo": "^2.5.3",
    "typescript": "5.8.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
